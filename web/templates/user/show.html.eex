<h2>Show user</h2>

<ul>

  <li>
    <strong>Username:</strong>
    <%= @user.username %>
  </li>

  <li>
    <strong>Name:</strong>
    <%= if @user.name do %>
    <%= @user.name %>
    <% else %>
    <i>not set</i>
    <% end %>
  </li>

  <li>
    <strong>Password:</strong>
    <i><%= if @user.password_hash, do: "set", else: "not set" %></i>
  </li>

</ul>

<%= link "Home", to: page_path(@conn, :index) %>
